<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCountry.Views.CountryBordersPage"
             xmlns:ffimaeloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             IconImageSource="icons8_location.ico"
             BackgroundColor="Silver">
    <ContentPage.Content>

        <StackLayout>

            <Frame
                x:Name="hasBorders"
                HasShadow="True" 
                HorizontalOptions="Center" 
                BorderColor="Brown" 
                BackgroundColor="Azure" 
                CornerRadius="30"
                IsVisible="{Binding Country.HasBorders}">
                <ScrollView  >

                    <StackLayout>

                        <ListView                   
                            HasUnevenRows="true"
                            ItemsSource="{Binding Country.CountryBorders}"
                            SeparatorVisibility="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Frame
                                            CornerRadius="20"
                                            BorderColor="DarkGoldenrod"
                                            BackgroundColor="WhiteSmoke"                               
                                            HasShadow="true"
                                            Margin="5">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding SelectCountryCommand}"/>
                                            </Frame.GestureRecognizers>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ffimaeloadingsvg:SvgCachedImage 
                                                    Grid.Column="0"
                                                    HeightRequest="30"
                                                    Source="{Binding Flag}"
                                                    WidthRequest="60">
                                                </ffimaeloadingsvg:SvgCachedImage>
                                                <StackLayout 
                                                    Grid.Column="1"
                                                    VerticalOptions="Center">
                                                    <Label 
                                                        FontAttributes="Bold"
                                                        FontSize="Small"
                                                        LineBreakMode="TailTruncation"
                                                        Text="{Binding Name}"
                                                        TextColor="Black">
                                                    </Label>
                                                    <Label 
                                                        Text="{Binding Capital}"
                                                        TextColor="Black">
                                                    </Label>
                                                </StackLayout>
                                                <Image 
                                                    Grid.Column="2"
                                                    HorizontalOptions="End" 
                                                    WidthRequest="20"
                                                    Source="ic_more_vert">
                                                </Image>
                                            </Grid>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>

                </ScrollView>
            </Frame>

            <Frame
                x:Name="hasNoBorders"
                Margin="5"
                BackgroundColor="WhiteSmoke" 
                BorderColor="Brown" 
                CornerRadius="20"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                IsVisible="{Binding Country.HasNoBorders}">

                <Label HorizontalOptions="CenterAndExpand"
                                Grid.Column="0"
                                Grid.Row="0"
                                Text="This country doesn't border with any state."
                                FontSize="Small"
                                FontAttributes="Bold"
                                TextColor="Black"
                           LineBreakMode="WordWrap">
                </Label>
            </Frame>

        </StackLayout>



    </ContentPage.Content>
</ContentPage>